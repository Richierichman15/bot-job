# JSearch API credentials
JSEARCH_API_KEY=your_api_key_here
JSEARCH_API_HOST=jsearch.p.rapidapi.com

# Active Jobs DB API credentials (can use same key as JSearch)
ACTIVEJOBS_API_KEY=your_api_key_here
ACTIVEJOBS_API_HOST=active-jobs-db.p.rapidapi.com

# Use multiple APIs for job searching
USE_MULTIPLE_APIS=true

# Email configuration
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENT=where_to_send_notifications@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Job search parameters
# Multiple job titles separated by commas
JOB_TITLES=software developer,fullstack developer,nodejs developer,python developer

# Multiple locations separated by commas
JOB_LOCATIONS=usa,remote

# Include remote jobs
JOB_REMOTE=true

# Minimum salary - use $20 to include hourly rates
MIN_SALARY=20

# Employment types
JOB_EMPLOYMENT_TYPES=FULLTIME,CONTRACT,PARTTIME

# Check interval in minutes (288 minutes = 5 times per day)
CHECK_INTERVAL_MINUTES=288

# OpenAI API (optional, for job description summarization)
# OPENAI_API_KEY=your_openai_api_key 